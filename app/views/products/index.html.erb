    <table class="table table-hover">
      <thead>
        <tr>
        <th>Product Name</th>
        <th>Product Price<th/>
        <th>Action<th/>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= product.product_price %></td>
            <td><%= link_to 'Show', product_path(product), class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-success" %></td>
            <td><%= link_to 'Delete', product_path(product), method: :delete, data:{confirm:"Are you sure?"}, class: "btn btn-danger" %></td>
          </tr>
    <% end %>
      </tbody>
    </table>
    <%= link_to 'Add Product', new_product_path, class: "btn btn-primary" %>
    <%= link_to 'Logged out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
